<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    app:cardCornerRadius="8dp"
    android:background="@drawable/card_view_outline"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/circle"
            android:layout_width="50dp"
            android:backgroundTint="@color/sky_blue"
            android:background="@drawable/circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:alpha=".6"
            android:gravity="center"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:fontFamily="@font/outfit_regular"
                android:textSize="30sp"
                android:textColor="@color/light_black"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Stark"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/circle"
            android:fontFamily="@font/outfit_regular"
            app:layout_constraintStart_toEndOf="@+id/circle"
            android:layout_marginStart="15dp"/>

        <ImageView
            android:id="@+id/star"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:src="@drawable/baseline_star_24" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/star"
            app:layout_constraintTop_toTopOf="@id/star"
            android:text="5.0"
            android:textSize="12sp"
            android:fontFamily="@font/outfit_regular"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/review_highLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/circle"
            android:textSize="16sp"
            android:text="PerfectPicture!!"
            app:layout_constraintStart_toStartOf="@id/circle"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/outfit_regular"
            android:textColor="@color/light_black"/>

        <TextView
            android:id="@+id/review_desc1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/review_highLight"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:text="We are Indiaâ€™s leading wedding photography and filmmaking company. Our award winning team documents stories of love from all around the world."
            app:layout_constraintStart_toStartOf="@id/review_highLight"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/outfit_regular"
            android:textColor="@color/text_grey"/>

        <TextView
            android:id="@+id/review_desc2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/review_desc1"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:text="Featured in Indian and international publications like Wedisson Awards, WeddingSutra and Better Photography."
            app:layout_constraintStart_toStartOf="@id/review_desc1"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/outfit_regular"
            android:textColor="@color/text_grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/review_desc2"
            app:layout_constraintStart_toStartOf="@id/review_desc2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Send on 17/04/2020"
            android:textSize="12sp"
            android:fontFamily="@font/outfit_regular"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_grey"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>