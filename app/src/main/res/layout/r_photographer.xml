<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_photographer_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="212dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/photograph_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/anna_unsplash" />

        <androidx.cardview.widget.CardView
            android:layout_width="49dp"
            android:layout_height="27dp"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#00B300"
            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center|start"
                android:layout_margin="7dp"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/photograph_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/outfit_regular"
                android:gravity="center|left"
                android:text="5.0"
                android:textColor="#FEFEFE"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/photograph_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/outfit_regular"
            android:text="@string/photographer_name"
            android:textColor="@color/light_black"
            android:textSize="26sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center|start"
            android:layout_marginTop="3dp"
            app:srcCompat="@drawable/verified" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rupee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="@font/outfit_regular"
            android:gravity="center"
            android:text="â‚¹"
            android:textColor="#EB87C7"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/photograph_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/outfit_regular"
            android:gravity="center|left"
            android:text="@string/ph_price"
            android:textColor="#EB87C7"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/per_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/outfit_regular"
            android:gravity="center"
            android:text="Per day"
            android:textColor="#EB87C7"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>

